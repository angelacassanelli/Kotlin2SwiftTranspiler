class TestMixed {
    var x: Int = 10
    val y: String = "Constant"

    fun mix() {
        x = "Assign wrong type" // Error: Type mismatch
        y = "Try to change val" // Error: Cannot update immutable variable
    }

    fun duplicateVariables() {
        var z: Int = 10
        var z: Int = 20 // Error: Redeclaration of variable 'z'
    }

    fun invalidControlFlow() {
        if (10) { // Error: Non boolean condition
            println("Invalid condition")
        }
    }
}
