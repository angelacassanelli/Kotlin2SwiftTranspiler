// Class representing a simple Counter

class Counter {

    val count: Int = 0

    // Semantic Error @ line 10: Trying to update immutable variable 'count'.
    fun increment() {
        println("Increment Counter")
        count = count + 1
    }

    // Semantic Error @ line 16: Trying to update immutable variable 'count'.
    // Semantic Error @ line 18: Return type mismatch: Function 'reset' is declared to return type 'Boolean', but the actual return type is 'Int'.
    fun reset(): Boolean {
        println("Reset Counter")
        count = 0
        return count
    }

    fun checkIfEven(): Int {
        println("Check if counter is even")
        return count % 2 
    }

    // Semantic Error @ line 32: Function 'checkEvenOrOdd' must have a return statement.
    // Semantic Error @ line 36: The for loop requires a range in the iteration condition, but found Int.
    // Semantic Error @ line 36: Invalid range found.
    // Semantic Error @ line 40: Variable declared as 'Boolean' but assigned a value of type 'Int'
    // Semantic Error @ line 41: Invalid expression type in 'if' condition: expected Boolean, found 'Int'.
    fun checkEvenOrOdd(): String {
        reset() //???

        var i: Int = 1
        for (i in 5) {
            increment() //???
        }

        val isEven: Boolean = checkIfEven()

        if (10) {
            println("Counter is even")
            return "Even"
        } else {
            println("Counter is odd")
        }
    }

}
